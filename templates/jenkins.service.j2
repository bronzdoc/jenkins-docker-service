[Unit]
Description=Jenkins container
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStart=/usr/bin/docker run -d -p {{ jenkins_port }} -v {{ user_home }}/jenkins_home:/var/jenkins_home -t --name jenkins jenkins

ExecStop=/usr/bin/docker stop -t 2 jenkins

[Install]
WantedBy=default.target


